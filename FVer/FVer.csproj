<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net35;net40;net45;net6.0;net8.0</TargetFrameworks>
    <RootNamespace>FVer</RootNamespace>
    <AssemblyName>FVer</AssemblyName>
    <Title>Friendly Versioning</Title>
    <Copyright>Copyright 2025 JKLeckr</Copyright>
    <Version>0.1-draft01e</Version>
    <LangVersion>latest</LangVersion>
    <Nullable>disable</Nullable>
    <RestorePackagesWithLockFile>true</RestorePackagesWithLockFile>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <ImplicitUsings>disable</ImplicitUsings>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <GenerateTargetFrameworkAttribute>false</GenerateTargetFrameworkAttribute>
    <DevelopmentDependency>true</DevelopmentDependency>
    <Authors>JKLeckr</Authors>
    <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
    <Company></Company>
    <PackageId>FVer</PackageId>
    <PackageDescription>Friendly Versioning (FVer) C# Implementation source-only package</PackageDescription>
    <RepositoryUrl>https://github.com/JKLeckr/FVer-csharp</RepositoryUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <SuppressTfmSupportBuildWarnings>true</SuppressTfmSupportBuildWarnings>
    <SuppressDependenciesWhenPacking>true</SuppressDependenciesWhenPacking>
  </PropertyGroup>

  <ItemGroup>
    <None Include="../README.md" Pack="true" PackagePath="" />
    <None Include="FVer.cs" Pack="true" PackagePath="buildTransitive\FVer\FVer.cs" />
    <None Include="FVer.targets" Pack="true" PackagePath="buildTransitive\FVer.targets" />
  </ItemGroup>
</Project>
